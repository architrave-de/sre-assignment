[www]
user = {{ web_username }}
group = {{ web_group }}

listen = /run/php/php7.0-fpm.sock

listen.owner = www-data
listen.group = www-data
;listen.mode = 0660

listen.allowed_clients = 127.0.0.1

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

pm.status_path = /status